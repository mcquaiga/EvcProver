<UserControl
    x:Class="UnionGas.MASA.Dialogs.LoginDialog.LoginDialogView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:UnionGas.MASA.Dialogs.LoginDialog"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <StackPanel FocusManager.FocusedElement="{Binding ElementName=EmployeeId}">
        <TextBlock
            Margin="5"
            FontSize="24"
            Text="Employee Number" />
        <TextBox
            x:Name="EmployeeId"
            Width="300"
            Margin="5"
            HorizontalAlignment="Center"
            FontSize="22" />

        <Button
            x:Name="Close"
            Margin="5"
            HorizontalAlignment="Right"
            IsDefault="True">
            OK
        </Button>
    </StackPanel>
</UserControl>
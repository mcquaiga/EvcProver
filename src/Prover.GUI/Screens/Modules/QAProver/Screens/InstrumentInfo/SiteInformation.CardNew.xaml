                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>
                    <materialDesign:PackIcon
                        Kind="Sunglasses" Width="48" Height="48" Grid.Column="0"
                        VerticalAlignment="Center"

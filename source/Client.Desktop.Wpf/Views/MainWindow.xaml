<rxui:ReactiveWindow
    x:Class="Client.Desktop.Wpf.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dialogs="clr-namespace:Client.Desktop.Wpf.Dialogs"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:rxui="http://reactiveui.net"
    xmlns:viewModels="clr-namespace:Client.Desktop.Wpf.ViewModels"
    x:Name="MainWindowView"
    Title="EVC Prover"
    Width="964"
    Height="750"
    x:TypeArguments="viewModels:MainViewModel"
    Style="{StaticResource DialogWindowStyle}"
    mc:Ignorable="d">
    <Window.Resources />

    <Grid Margin="2">

        <Grid
            Width="75"
            MaxWidth="75"
            Margin="0,0,60,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Stretch"
            ZIndex="8">
            <StackPanel
                x:Name="NavigationBar"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Orientation="Vertical"
                ZIndex="8">
                <StackPanel.Resources>
                    <Style BasedOn="{StaticResource MaterialDesignIconButton}" TargetType="{x:Type Button}">
                        <Setter Property="Margin" Value="8,2,8,2" />
                        <Setter Property="Width" Value="Auto" />
                        <Setter Property="Height" Value="Auto" />
                    </Style>
                </StackPanel.Resources>
                <Button x:Name="GoHomeButton" Content="{materialDesign:PackIcon Home, Size=48}" />
                <Button x:Name="GoBackButton" Content="{materialDesign:PackIcon NavigateBefore, Size=48}" />
            </StackPanel>
            <ContentControl VerticalAlignment="Center" />
            <ItemsControl x:Name="ToolbarItemsControl" Margin="0,0,4,0">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Bottom"
                            Orientation="Horizontal"
                            ZIndex="8" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </Grid>

        <rxui:RoutedViewHost
            x:Name="RoutedViewHost"
            Margin="60,0,0,0"
            HorizontalAlignment="Center"
            HorizontalContentAlignment="Stretch"
            VerticalContentAlignment="Stretch" />
        <!--
            HorizontalAlignment="Center"
            VerticalAlignment="Stretch"
            HorizontalContentAlignment="Stretch"
            VerticalContentAlignment="Stretch"
        -->

        <Grid
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            d:LayoutOverrides="Width">
            <materialDesign:Snackbar x:Name="NotificationSnackBar" />
        </Grid>
    </Grid>


</rxui:ReactiveWindow>
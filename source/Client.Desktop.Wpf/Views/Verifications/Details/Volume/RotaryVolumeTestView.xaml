<reactiveUi:ReactiveUserControl
    x:Class="Client.Desktop.Wpf.Views.Verifications.Details.Volume.RotaryVolumeTestView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Client.Desktop.Wpf.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:reactiveUi="http://reactiveui.net"
    xmlns:rotary1="clr-namespace:Prover.Application.ViewModels.Volume.Rotary;assembly=Prover.Application"
    d:DesignHeight="450"
    x:TypeArguments="rotary1:RotaryVolumeViewModel"
    mc:Ignorable="d">
    <Grid HorizontalAlignment="Stretch">
        <StackPanel Orientation="Horizontal">

            <StackPanel VerticalAlignment="Bottom" Orientation="Vertical">
                <controls:ValueDescriptionControl
                    x:Name="AppliedInputControl"
                    IsReadOnly="False"
                    Label="Applied Input"
                    TabIndex="0" />

                <controls:ValueDescriptionControl
                    x:Name="UncorrectedPulseCountControl"
                    IsReadOnly="False"
                    Label="Uncor Pulses"
                    TabIndex="1" />

                <controls:ValueDescriptionControl
                    x:Name="CorrectedPulseCountControl"
                    IsReadOnly="False"
                    Label="Cor Pulses"
                    TabIndex="2" />
            </StackPanel>

            <Border
                Margin="2,16"
                BorderThickness="1,0,0,0"
                Style="{StaticResource SubSectionDividerBorder}" />

            <reactiveUi:ViewModelViewHost x:Name="UncorrectedVolumeContent" />

            <Border
                Margin="2,16"
                BorderThickness="1,0,0,0"
                Style="{StaticResource SubSectionDividerBorder}" />
            <reactiveUi:ViewModelViewHost x:Name="CorrectedVolumeContent" />

            <Border
                Margin="2,16"
                BorderThickness="1,0,0,0"
                Style="{StaticResource SubSectionDividerBorder}" />

            <StackPanel Orientation="Vertical">
                <TextBlock Style="{StaticResource SecondaryTestHeaderStyle}" Text="Rotary Meter" />
                <controls:PercentageControlNew
                    x:Name="RotaryPercentErrorControl"
                    Margin="5"
                    HorizontalAlignment="Center" />
                <StackPanel Margin="5">
                    <TextBlock x:Name="RotaryMeterTypeText" HorizontalAlignment="Center" />
                    <StackPanel Orientation="Horizontal">
                        <controls:ValueDescriptionControl x:Name="RotaryExpectedMeterDisplacementControl" Label="Expected" />
                        <controls:ValueDescriptionControl x:Name="RotaryEvcMeterDisplacementControl" Label="EVC Value" />
                    </StackPanel>

                </StackPanel>
            </StackPanel>

        </StackPanel>

    </Grid>
</reactiveUi:ReactiveUserControl>

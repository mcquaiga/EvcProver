<reactiveUi:ReactiveUserControl
    x:Class="Client.Desktop.Wpf.Views.Verifications.Dialogs.VolumeTestDialogView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:communications="clr-namespace:Client.Desktop.Wpf.Communications"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:reactiveUi="http://reactiveui.net"
    x:TypeArguments="communications:RotaryVolumeTestManager"
    mc:Ignorable="d">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <UniformGrid
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Rows="1">

            <materialDesign:Card
                x:Name="UncorrectedStackPanelControl"
                Margin="10"
                Padding="15"
                materialDesign:ShadowAssist.ShadowDepth="Depth2">
                <StackPanel Orientation="Vertical">
                    <materialDesign:ColorZone
                        Padding="15"
                        materialDesign:ShadowAssist.ShadowDepth="Depth1"
                        Content="Uncorrected"
                        FontSize="36"
                        Mode="PrimaryLight" />
                    <StackPanel
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                        <TextBlock
                            x:Name="UncorrectedPulseValueTextBlock"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Bottom"
                            Style="{StaticResource MaterialDesignHeadline1TextBlock}"
                            Text="0" />

                        <StackPanel
                            Margin="25,0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Orientation="Vertical">
                            <TextBlock
                                x:Name="UncorrectedTargetValueTextBlock"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                                Text="100" />
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                Text="Target" />
                        </StackPanel>
                    </StackPanel>
                    <TextBlock
                        x:Name="UncorrectedChannelNameTextBlock"
                        HorizontalAlignment="Center"
                        Style="{StaticResource MaterialDesignCaptionTextBlock}"
                        Text="Channel A" />
                </StackPanel>
            </materialDesign:Card>

            <materialDesign:Card
                x:Name="CorrectedStackPanelControl"
                Margin="10"
                Padding="15"
                materialDesign:ShadowAssist.ShadowDepth="Depth2">
                <StackPanel Orientation="Vertical">
                    <materialDesign:ColorZone
                        Padding="15"
                        materialDesign:ShadowAssist.ShadowDepth="Depth1"
                        Content="Corrected"
                        FontSize="36"
                        Mode="PrimaryLight" />
                    <TextBlock
                        x:Name="CorrectedPulseValueTextBlock"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom"
                        Style="{StaticResource MaterialDesignHeadline1TextBlock}"
                        Text="0" />
                    <!--<controls:ValueDescriptionControl
                    IsReadOnly="True"
                    Label="Actual"
                    Value="{Binding UncorPulseCount, Mode=OneWay, UpdateSourceTrigger=PropertyChanged, FallbackValue=25}" />-->
                    <TextBlock
                        x:Name="CorrectedChannelNameTextBlock"
                        HorizontalAlignment="Center"
                        Style="{StaticResource MaterialDesignCaptionTextBlock}"
                        Text="Channel B" />
                </StackPanel>
            </materialDesign:Card>


        </UniformGrid>
    </Grid>

</reactiveUi:ReactiveUserControl>

<reactiveUi:ReactiveUserControl
    x:Class="Client.Desktop.Wpf.Views.Verifications.Dialogs.LiveReadDialogView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:communications="clr-namespace:Client.Desktop.Wpf.Communications"
    xmlns:controls="clr-namespace:Client.Desktop.Wpf.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:interfaces="clr-namespace:Prover.Application.Interfaces;assembly=Prover.Application"
    xmlns:liveReadCorrections="clr-namespace:Prover.Application.Services.LiveReadCorrections;assembly=Prover.Application"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:reactiveUi="http://reactiveui.net"
    d:DesignHeight="400"
    d:DesignWidth="800"
    x:TypeArguments="liveReadCorrections:LiveReadCoordinator"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style TargetType="materialDesign:Card">
            <Setter Property="Margin" Value="4" />
            <Setter Property="Padding" Value="15" />
        </Style>
        <Style TargetType="{x:Type StackPanel}">
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
    </UserControl.Resources>
    <Grid
        Margin="30,30,30,0"
        HorizontalAlignment="Center"
        VerticalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <UniformGrid
            Grid.Row="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Rows="1">

            <materialDesign:Card x:Name="PressureStackPanelControl" materialDesign:ShadowAssist.ShadowDepth="Depth0">
                <StackPanel Orientation="Vertical">
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Style="{StaticResource MaterialDesignHeadline4TextBlock}"
                        Text="Pressure" />
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon
                            Width="48"
                            Height="48"
                            Margin="20"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Kind="Gauge" />
                        <TextBlock
                            x:Name="PressureValueTextBlock"
                            VerticalAlignment="Bottom"
                            Style="{StaticResource MaterialDesignHeadline1TextBlock}"
                            Text="80.5" />

                        <StackPanel
                            Margin="25,0"
                            HorizontalAlignment="Right"
                            Orientation="Vertical">
                            <TextBlock
                                x:Name="PressureTargetValueTextBlock"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                                Text="100" />
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                Text="Target" />
                        </StackPanel>

                    </StackPanel>
                    <!--<materialDesign:PackIcon
                        Width="48"
                        Height="48"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Kind="Gauge" />-->
                    <TextBlock
                        x:Name="PressureUnitsTextBlock"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                        Text="PSIA" />

                    <StackPanel
                        Margin="25,0"
                        HorizontalAlignment="Right"
                        Orientation="Vertical">
                        <ProgressBar
                            x:Name="PressureStableProgressBar"
                            Width="150"
                            HorizontalAlignment="Center"
                            Maximum="100"
                            Style="{StaticResource MaterialDesignCircularProgressBar}"
                            Value="80" />
                        <TextBlock
                            x:Name="PressureDifferenceTextBlock"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Style="{StaticResource MaterialDesignHeadline6TextBlock}" />
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Style="{StaticResource MaterialDesignSubtitle2TextBlock}"
                            Text="Difference" />

                    </StackPanel>
                </StackPanel>

            </materialDesign:Card>

            <materialDesign:Card x:Name="TemperatureStackPanelControl" materialDesign:ShadowAssist.ShadowDepth="Depth0">
                <StackPanel Orientation="Vertical">
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Style="{StaticResource MaterialDesignHeadline4TextBlock}"
                        Text="Temperature" />
                    <ProgressBar
                        x:Name="TemperatureStableProgressBar"
                        Width="36"
                        Height="36"
                        Margin="0,30,0,15"
                        HorizontalAlignment="Center"
                        IsIndeterminate="True"
                        Maximum="100"
                        Style="{StaticResource MaterialDesignCircularProgressBar}"
                        Value="80" />
                    <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                        <materialDesign:PackIcon
                            Width="48"
                            Height="48"
                            Margin="12,0,4,0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Kind="ThermometerLow" />
                        <TextBlock
                            x:Name="TemperatureValueTextBlock"
                            MinWidth="200"
                            Margin="12,0,4,0"
                            Padding="12,0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Bottom"
                            Style="{StaticResource MaterialDesignHeadline1TextBlock}"
                            Text="50.5" />

                        <StackPanel Margin="0" Orientation="Vertical">
                            <TextBlock
                                x:Name="TemperatureTargetValueTextBlock"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                                Text="100" />
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                Text="Target" />

                        </StackPanel>


                    </StackPanel>


                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                        Text="F" />
                    <Expander
                        Margin="0,4,-12,0"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Center"
                        Background="{StaticResource MaterialDesignPaper}">
                        <Expander.Header>
                            <materialDesign:PackIcon
                                Width="24"
                                Height="24"
                                HorizontalAlignment="Left"
                                HorizontalContentAlignment="Right"
                                Kind="InfoCircle" />
                        </Expander.Header>
                        <UniformGrid HorizontalAlignment="Stretch" Rows="1">
                            <StackPanel
                                MinWidth="75"
                                Margin="15,8"
                                HorizontalAlignment="Center"
                                Orientation="Vertical">

                                <TextBlock
                                    x:Name="TemperatureDifferenceTextBlock"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Style="{StaticResource MaterialDesignHeadline6TextBlock}" />
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Style="{StaticResource MaterialDesignSubtitle2TextBlock}"
                                    Text="Difference" />

                            </StackPanel>
                            <StackPanel
                                MinWidth="75"
                                Margin="15,8"
                                HorizontalAlignment="Center"
                                Orientation="Vertical">

                                <TextBlock
                                    x:Name="TemperatureAverageTextBlock"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Style="{StaticResource MaterialDesignHeadline6TextBlock}" />
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Style="{StaticResource MaterialDesignSubtitle2TextBlock}"
                                    Text="Average" />

                            </StackPanel>
                        </UniformGrid>

                    </Expander>
                </StackPanel>
            </materialDesign:Card>
        </UniformGrid>
    </Grid>
</reactiveUi:ReactiveUserControl>

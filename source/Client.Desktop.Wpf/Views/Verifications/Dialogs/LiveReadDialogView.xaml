<reactiveUi:ReactiveUserControl
    x:Class="Client.Desktop.Wpf.Views.Verifications.Dialogs.LiveReadDialogView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:communications="clr-namespace:Client.Desktop.Wpf.Communications"
    xmlns:controls="clr-namespace:Client.Desktop.Wpf.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Client.Desktop.Wpf.Views.Verifications.Dialogs"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:reactiveUi="http://reactiveui.net"
    d:DesignHeight="300"
    d:DesignWidth="400"
    x:TypeArguments="communications:DeviceSessionManager"
    mc:Ignorable="d">
    <Grid>
        <StackPanel
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Horizontal">

            <StackPanel Margin="5" Orientation="Horizontal">
                <materialDesign:PackIcon
                    Width="36"
                    Height="36"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Kind="Gauge" />
                <StackPanel Margin="4" Orientation="Vertical">

                    <controls:ValueDescriptionControl
                        x:Name="PressureItemValueControl"
                        IsReadOnly="True"
                        Label="Actual" />
                    <controls:ValueDescriptionControl
                        x:Name="PressureTargetValueControl"
                        IsReadOnly="True"
                        Label="Target" />
                </StackPanel>
            </StackPanel>

            <StackPanel Margin="5" Orientation="Horizontal">
                <materialDesign:PackIcon
                    Width="36"
                    Height="36"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Kind="Thermometer" />
                <StackPanel Margin="4" Orientation="Vertical">


                    <controls:ValueDescriptionControl
                        x:Name="TempItemValueControl"
                        IsReadOnly="True"
                        Label="Actual" />


                    <controls:ValueDescriptionControl
                        x:Name="TempTargetValueControl"
                        IsReadOnly="True"
                        Label="Target" />

                </StackPanel>
            </StackPanel>


        </StackPanel>


        <Button
            x:Name="CancelButton"
            Width="100"
            Margin="8,25"
            VerticalAlignment="Bottom"
            Click="CancelButton_Click"
            Content="Cancel"
            Style="{StaticResource MaterialDesignFlatAccentButton}" />
    </Grid>
</reactiveUi:ReactiveUserControl>

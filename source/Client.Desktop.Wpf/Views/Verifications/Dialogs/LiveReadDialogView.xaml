<reactiveUi:ReactiveUserControl
    x:Class="Client.Desktop.Wpf.Views.Verifications.Dialogs.LiveReadDialogView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:communications="clr-namespace:Client.Desktop.Wpf.Communications"
    xmlns:controls="clr-namespace:Client.Desktop.Wpf.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:interfaces="clr-namespace:Prover.Application.Interfaces;assembly=Prover.Application"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:reactiveUi="http://reactiveui.net"
    d:DesignHeight="400"
    d:DesignWidth="700"
    x:TypeArguments="communications:LiveReadCoordinator"
    mc:Ignorable="d">
    <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">

        <materialDesign:Card
            x:Name="PressureStackPanelControl"
            Margin="10"
            Padding="15"
            materialDesign:ShadowAssist.ShadowDepth="Depth2">
            <StackPanel Orientation="Vertical">
                <materialDesign:ColorZone
                    Padding="15"
                    materialDesign:ShadowAssist.ShadowDepth="Depth1"
                    FontSize="36"
                    Mode="PrimaryLight">
                    <materialDesign:ColorZone.Content>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon
                                Width="48"
                                Height="48"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Kind="Gauge" />
                            <TextBlock VerticalAlignment="Center" Text="Pressure" />
                        </StackPanel>
                    </materialDesign:ColorZone.Content>
                </materialDesign:ColorZone>

                <StackPanel
                    Margin="4"
                    HorizontalAlignment="Center"
                    Orientation="Vertical">

                    <StackPanel Margin="4" Orientation="Horizontal">
                        <TextBlock
                            x:Name="PressureValueTextBlock"
                            VerticalAlignment="Bottom"
                            Style="{StaticResource MaterialDesignHeadline1TextBlock}"
                            Text="80.5" />
                        <!--<TextBlock
                        x:Name="PressureUnitsTextBlock"
                        Margin="0,0,0,25"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                        Text="PSI" />-->

                    </StackPanel>

                    <TextBlock
                        x:Name="PressureTargetValueTextBlock"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Style="{StaticResource MaterialDesignHeadline3TextBlock}"
                        Text="100" />
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                        Text="Target" />

                </StackPanel>
            </StackPanel>
        </materialDesign:Card>
        <materialDesign:Card
            x:Name="TemperatureStackPanelControl"
            Margin="10"
            Padding="15"
            materialDesign:ShadowAssist.ShadowDepth="Depth2">
            <StackPanel Orientation="Vertical">
                <materialDesign:ColorZone
                    Padding="15"
                    materialDesign:ShadowAssist.ShadowDepth="Depth1"
                    FontSize="36"
                    Mode="PrimaryLight">
                    <materialDesign:ColorZone.Content>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon
                                Width="48"
                                Height="48"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Kind="Thermometer" />
                            <TextBlock VerticalAlignment="Center" Text="Temperature" />
                        </StackPanel>
                    </materialDesign:ColorZone.Content>
                </materialDesign:ColorZone>

                <StackPanel
                    Margin="4"
                    HorizontalAlignment="Center"
                    Orientation="Vertical">

                    <StackPanel Margin="4" Orientation="Horizontal">
                        <TextBlock
                            x:Name="TemperatureValueTextBlock"
                            VerticalAlignment="Bottom"
                            Style="{StaticResource MaterialDesignHeadline1TextBlock}"
                            Text="50.5" />
                        <materialDesign:PackIcon
                            Width="42"
                            Height="42"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Kind="TemperatureFahrenheit" />

                    </StackPanel>

                    <TextBlock
                        x:Name="TemperatureTargetValueTextBlock"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Style="{StaticResource MaterialDesignHeadline3TextBlock}"
                        Text="100" />
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                        Text="Target" />

                </StackPanel>
            </StackPanel>
        </materialDesign:Card>
    </StackPanel>
</reactiveUi:ReactiveUserControl>

<reactiveUi:ReactiveUserControl
    x:Class="Client.Desktop.Wpf.Views.Dashboards.SummaryCardView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dashboard="clr-namespace:Prover.Application.Dashboard;assembly=Prover.Application"
    xmlns:local="clr-namespace:Client.Desktop.Wpf.Views.Dashboards"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:reactiveUi="http://reactiveui.net"
    x:TypeArguments="dashboard:TestsSummaryDashboardViewModel"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="DashboardStyles.xaml" />

                <ResourceDictionary />
            </ResourceDictionary.MergedDictionaries>

            <Style
                x:Key="SummaryValueTextBlockStyle"
                BasedOn="{StaticResource ValueTextBlockStyle}"
                TargetType="{x:Type TextBlock}">
                <Setter Property="FontSize" Value="60 px" />
                <Setter Property="FontWeight" Value="SemiBold" />
                <!--<Setter Property="HorizontalAlignment" Value="Right" />-->
                <Setter Property="VerticalAlignment" Value="Bottom" />
                <Setter Property="Foreground" Value="{StaticResource MaterialDesignBody}" />

            </Style>
            <Style
                x:Key="SummaryLabelTextBlockStyle"
                BasedOn="{StaticResource TitleTextBlockStyle}"
                TargetType="{x:Type TextBlock}">
                <Setter Property="FontSize" Value="22" />
                <Setter Property="Height" Value="Auto" />
                <Setter Property="HorizontalAlignment" Value="Right" />

                <Setter Property="VerticalAlignment" Value="Bottom" />
                <Setter Property="Foreground" Value="{StaticResource MaterialDesignBody}" />

            </Style>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid
        Width="Auto"
        Height="Auto"
        Margin="5"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        Style="{StaticResource DashboardItemStyle}">
        <materialDesign:Card Padding="0" Style="{DynamicResource DashboardCardStyle}">
            <!--    -->
            <UniformGrid
                HorizontalAlignment="Stretch"
                VerticalAlignment="Center"
                Rows="1">
                <StackPanel Margin="20,5" HorizontalAlignment="Stretch">
                    <TextBlock x:Name="TotalTestsTextBlock" Style="{StaticResource SummaryValueTextBlockStyle}" />

                    <TextBlock Style="{StaticResource SummaryLabelTextBlockStyle}" Text="Total tests" />

                </StackPanel>
                <Border
                    Margin="1,15"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center"
                    BorderThickness="1,0,0,0"
                    Style="{StaticResource SubSectionDividerBorder}">

                    <Grid Margin="4">
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <TextBlock
                            x:Name="PassedTotalTextBlock"
                            Grid.Row="0"
                            Grid.Column="0"
                            Margin="8,0"
                            VerticalAlignment="Center"
                            FontSize="28"
                            Style="{StaticResource ValueTextBlockStyle}" />
                        <materialDesign:PackIcon
                            Grid.Row="0"
                            Grid.Column="1"
                            VerticalAlignment="Center"
                            Foreground="{StaticResource PassColour}"
                            Kind="Circle" />
                        <TextBlock
                            Grid.Row="0"
                            Grid.Column="2"
                            Margin="8,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            FontSize="28"
                            Style="{StaticResource ValueTextBlockStyle}"
                            Text="Passed" />


                        <TextBlock
                            x:Name="FailedTotalTextBlock"
                            Grid.Row="1"
                            Grid.Column="0"
                            Margin="8,0"
                            VerticalAlignment="Center"
                            FontSize="28"
                            Style="{StaticResource ValueTextBlockStyle}" />
                        <materialDesign:PackIcon
                            Grid.Row="1"
                            Grid.Column="1"
                            VerticalAlignment="Center"
                            Foreground="{StaticResource FailColour}"
                            Kind="Circle" />
                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="2"
                            Margin="8,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            FontSize="28"
                            Style="{StaticResource ValueTextBlockStyle}"
                            Text="Failed" />



                    </Grid>
                </Border>
                <StackPanel Margin="20,5" HorizontalAlignment="Right">
                    <TextBlock>

                        <TextBlock x:Name="PassPercentageTextBlock" Style="{StaticResource SummaryValueTextBlockStyle}" />
                        <TextBlock
                            FontSize="32"
                            Style="{StaticResource SummaryValueTextBlockStyle}"
                            Text=" %" />

                    </TextBlock>

                    <TextBlock Style="{StaticResource SummaryLabelTextBlockStyle}" Text="Pass percentage" />

                </StackPanel>

                <StackPanel Margin="20,5" HorizontalAlignment="Right">
                    <TextBlock x:Name="AverageDurationTextBlock" Style="{StaticResource SummaryValueTextBlockStyle}" />

                    <TextBlock Style="{StaticResource SummaryLabelTextBlockStyle}" Text="Average duration" />

                </StackPanel>

                <StackPanel Margin="20,5" HorizontalAlignment="Right">
                    <TextBlock x:Name="TotalNotExportedTextBlock" Style="{StaticResource SummaryValueTextBlockStyle}" />

                    <TextBlock Style="{StaticResource SummaryLabelTextBlockStyle}" Text="Waiting for export" />

                </StackPanel>

            </UniformGrid>


        </materialDesign:Card>


    </Grid>
</reactiveUi:ReactiveUserControl>

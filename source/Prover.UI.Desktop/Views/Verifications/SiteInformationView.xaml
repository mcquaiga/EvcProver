<reactiveUi:ReactiveUserControl
    x:Class="Prover.UI.Desktop.Views.Verifications.SiteInformationView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:reactiveUi="http://reactiveui.net"
    xmlns:viewModels="clr-namespace:Prover.Application.ViewModels;assembly=Prover.Application"
    d:DataContext="{d:DesignInstance viewModels:SiteInformationViewModel,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="925"
    d:DesignWidth="400"
    x:TypeArguments="viewModels:SiteInformationViewModel"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/Resources.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Style TargetType="materialDesign:PackIcon">
                <Setter Property="Foreground" Value="Gray" />
                <Setter Property="Width" Value="48" />
                <Setter Property="Height" Value="48" />
                <Setter Property="Margin" Value="2,0,8,8" />
                <Setter Property="HorizontalAlignment" Value="Center" />
                <Setter Property="VerticalAlignment" Value="Center" />
            </Style>



            <Style BasedOn="{StaticResource MaterialDesignHeadline6TextBlock}" TargetType="{x:Type TextBlock}">
                <Setter Property="HorizontalAlignment" Value="Center" />
                <Setter Property="FontSize" Value="18" />
            </Style>

            <Style
                x:Key="ValueTextBlockStyle"
                BasedOn="{StaticResource MaterialDesignHeadline6TextBlock}"
                TargetType="{x:Type TextBlock}">
                <Setter Property="HorizontalAlignment" Value="Center" />
                <Setter Property="FontSize" Value="20" />
                <Setter Property="Margin" Value="2,0" />
                <Setter Property="FontWeight" Value="Regular" />
            </Style>

            <Style
                x:Key="LabelFontStyle"
                BasedOn="{StaticResource MaterialDesignBody1TextBlock}"
                TargetType="{x:Type TextBlock}">
                <Setter Property="HorizontalAlignment" Value="Center" />
                <Setter Property="FontSize" Value="14" />
                <Setter Property="Margin" Value="0,1" />
                <Setter Property="FontWeight" Value="Regular" />

            </Style>



            <ControlTemplate x:Key="ValueLabelControlTemplate" TargetType="ContentControl">

                <StackPanel
                    Margin="5"
                    HorizontalAlignment="Center"
                    Orientation="Vertical">

                    <TextBlock
                        x:Name="ValueTextBlock"
                        Style="{StaticResource ValueTextBlockStyle}"
                        Text="{TemplateBinding Content}">
                        <!--<TextBlock.Resources>
                            <Style BasedOn="{StaticResource MaterialDesignSubtitle1TextBlock}" TargetType="{x:Type TextBlock}">
                                <Setter Property="HorizontalAlignment" Value="Center" />
                                <Setter Property="FontSize" Value="24" />
                                <Setter Property="Margin" Value="0" />
                            </Style>
                        </TextBlock.Resources>-->

                    </TextBlock>
                    <TextBlock
                        x:Name="LabelTextBlock"
                        Style="{StaticResource LabelFontStyle}"
                        Text="{Binding Path=Tag, RelativeSource={RelativeSource TemplatedParent}}">
                        <!--<TextBlock.Resources>
                            <Style BasedOn="{StaticResource MaterialDesignSubtitle2TextBlock}" TargetType="{x:Type TextBlock}">
                                <Setter Property="HorizontalAlignment" Value="Center" />
                                <Setter Property="FontSize" Value="18" />
                                <Setter Property="FontWeight" Value="Light" />
                                <Setter Property="Margin" Value="0" />

                            </Style>
                        </TextBlock.Resources>-->

                    </TextBlock>
                </StackPanel>

            </ControlTemplate>

            <ControlTemplate x:Key="PulseOutputControlTemplate" TargetType="ContentControl">
                <StackPanel
                    Margin="5"
                    HorizontalAlignment="Center"
                    DataContext="{TemplateBinding DataContext}">

                    <TextBlock
                        x:Name="ChannelTypeTextBlock"
                        HorizontalAlignment="Center"
                        Style="{StaticResource ValueTextBlockStyle}"
                        Text="{Binding ChannelType}" />
                    <TextBlock
                        HorizontalAlignment="Center"
                        FontWeight="Regular"
                        Style="{StaticResource LabelFontStyle}"
                        Text="{Binding Path=Tag, RelativeSource={RelativeSource TemplatedParent}}" />
                    <!--<TextBlock
                        x:Name="ChannelScalingTextBlock"
                        HorizontalAlignment="Center"
                        FontSize="12"
                        Text="{Binding Scaling}" />
                    <TextBlock Style="{StaticResource LabelFontStyle}" Text="Scaling" />-->

                </StackPanel>

            </ControlTemplate>



        </ResourceDictionary>
    </UserControl.Resources>
    <Border
        HorizontalAlignment="Center"
        BorderThickness="1,0,0,0"
        Style="{StaticResource TestSectionOuterBorder}">
        <StackPanel HorizontalAlignment="Stretch" Orientation="Vertical">
            <Grid Margin="15" HorizontalAlignment="Stretch">

                <materialDesign:PackIcon
                    x:Name="VerifiedStatusIcon"
                    Width="36"
                    Height="36"
                    Margin="15"
                    HorizontalAlignment="Left"
                    Style="{StaticResource PassFailIcon}" />

                <StackPanel
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Vertical">
                    <TextBlock
                        x:Name="DeviceNameTextBlock"
                        Margin="0,5"
                        HorizontalAlignment="Center"
                        FontSize="32" />

                    <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                        <TextBlock
                            x:Name="CompositionTypeTextBlock"
                            FontWeight="Light"
                            Style="{StaticResource ValueTextBlockStyle}" />
                        <TextBlock
                            FontWeight="UltraLight"
                            Style="{StaticResource ValueTextBlockStyle}"
                            Text=" | " />
                        <TextBlock
                            x:Name="DriveTypeTextBlock"
                            FontWeight="Light"
                            Style="{StaticResource ValueTextBlockStyle}" />
                    </StackPanel>

                    <TextBlock x:Name="TestDateBlock" Style="{StaticResource LabelFontStyle}" />
                </StackPanel>
            </Grid>
            <!--<TextBlock
                    x:Name="ClientTextBlock"
                    Margin="0,5,0,0"
                    HorizontalAlignment="Center" />-->

            <UniformGrid
                HorizontalAlignment="Stretch"
                VerticalAlignment="Bottom"
                Rows="1">

                <ContentControl
                    x:Name="JobIdTextControl"
                    Tag="Job #"
                    Template="{StaticResource ValueLabelControlTemplate}" />
                <ContentControl
                    x:Name="EmployeeIdTextControl"
                    Tag="Employee"
                    Template="{StaticResource ValueLabelControlTemplate}" />

            </UniformGrid>



            <!--  Site Information  -->
            <Border Style="{StaticResource SubSectionDividerBorder}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <!--<materialDesign:PackIcon
                        Grid.Column="0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Kind="InformationOutline" />-->
                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Style="{StaticResource SectionHeaderTextBlockStyle}"
                        Text="Site Information" />
                    <UniformGrid
                        Grid.Row="1"
                        Grid.Column="1"
                        HorizontalAlignment="Stretch"
                        Columns="3">
                        <ContentControl
                            x:Name="CompanyNumberText"
                            Tag="Inventory #"
                            Template="{StaticResource ValueLabelControlTemplate}" />
                        <ContentControl
                            x:Name="SerialNumberText"
                            Tag="Serial #"
                            Template="{StaticResource ValueLabelControlTemplate}" />
                        <ContentControl
                            x:Name="FirmwareText"
                            Tag="Firmware Ver."
                            Template="{StaticResource ValueLabelControlTemplate}" />
                    </UniformGrid>

                </Grid>
            </Border>
            <Border Style="{StaticResource SubSectionDividerBorder}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <!--<materialDesign:PackIcon Kind="TestTube" />-->
                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Style="{StaticResource SectionHeaderTextBlockStyle}"
                        Text="Volume" />
                    <UniformGrid
                        Grid.Row="1"
                        Grid.Column="1"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center">
                        <ContentControl
                            x:Name="UncorUnitsTextBlock"
                            Tag="Uncor. Units"
                            Template="{StaticResource ValueLabelControlTemplate}" />
                        <ContentControl
                            x:Name="CorUnitsTextBlock"
                            Tag="Cor. Units"
                            Template="{StaticResource ValueLabelControlTemplate}" />
                        <ContentControl
                            x:Name="DriveRateTextBlock"
                            Tag="Drive Rate"
                            Template="{StaticResource ValueLabelControlTemplate}" />

                    </UniformGrid>
                </Grid>
            </Border>

            <Border x:Name="PressureInfoSection" Style="{StaticResource SubSectionDividerBorder}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <!--<materialDesign:PackIcon Grid.Column="0" Kind="Gauge" />-->
                    <TextBlock
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Style="{StaticResource SectionHeaderTextBlockStyle}"
                        Text="Pressure" />
                    <UniformGrid
                        Grid.Row="1"
                        Grid.Column="1"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        Columns="2">
                        <ContentControl
                            x:Name="PressureUnitsTextBlock"
                            Tag="Units"
                            Template="{StaticResource ValueLabelControlTemplate}" />
                        <ContentControl
                            x:Name="PressureRangeTextBlock"
                            Tag="Range"
                            Template="{StaticResource ValueLabelControlTemplate}" />
                        <ContentControl
                            x:Name="PressureTransducerTextBlock"
                            Tag="Transducer"
                            Template="{StaticResource ValueLabelControlTemplate}" />
                        <ContentControl
                            x:Name="BasePressureTextBlock"
                            Tag="Base"
                            Template="{StaticResource ValueLabelControlTemplate}" />
                        <ContentControl
                            x:Name="AtmPressureTextBlock"
                            Tag="ATM"
                            Template="{StaticResource ValueLabelControlTemplate}" />

                    </UniformGrid>
                </Grid>
            </Border>

            <Border x:Name="TemperatureInfoSection" Style="{StaticResource SubSectionDividerBorder}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <!--<materialDesign:PackIcon
                        Grid.Column="0"
                        Width="48"
                        Height="48"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Kind="Thermometer" />-->
                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Style="{StaticResource SectionHeaderTextBlockStyle}"
                        Text="Temperature" />
                    <UniformGrid
                        Grid.Row="1"
                        Grid.Column="1"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        Columns="2">
                        <ContentControl
                            x:Name="TempUnitsTextBlock"
                            Tag="Units"
                            Template="{StaticResource ValueLabelControlTemplate}" />

                        <ContentControl
                            x:Name="BaseTempTextBlock"
                            Tag="Base"
                            Template="{StaticResource ValueLabelControlTemplate}" />


                    </UniformGrid>
                </Grid>
            </Border>

            <Border Style="{StaticResource SubSectionDividerBorder}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <!--<materialDesign:PackIcon Grid.Column="0" Kind="Pulse" />-->
                    <TextBlock
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Style="{StaticResource SectionHeaderTextBlockStyle}"
                        Text="Pulse Outputs" />
                    <UniformGrid
                        Grid.Row="1"
                        Grid.Column="1"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        Columns="2">


                        <!--  Region Pulser A  -->
                        <StackPanel Margin="5" HorizontalAlignment="Center">

                            <ContentControl
                                x:Name="ChannelAContentControl"
                                Tag="Channel A"
                                Template="{StaticResource PulseOutputControlTemplate}" />

                            <ContentControl
                                x:Name="ChannelAUnitsTextBlock"
                                Tag="Units"
                                Template="{StaticResource ValueLabelControlTemplate}" />

                        </StackPanel>
                        <!--  End Region  -->
                        <StackPanel Margin="5" HorizontalAlignment="Center">

                            <ContentControl
                                x:Name="ChannelBContentControl"
                                Tag="Channel B"
                                Template="{StaticResource PulseOutputControlTemplate}" />

                            <ContentControl
                                x:Name="ChannelBUnitsTextBlock"
                                Tag="Units"
                                Template="{StaticResource ValueLabelControlTemplate}" />

                        </StackPanel>

                        <!--<StackPanel Margin="5" HorizontalAlignment="Center">
                            <TextBlock FontSize="12" Text="Pulser C"
                                           Foreground="Gray"
                                           FontWeight="Bold" HorizontalAlignment="Center" />

                            <TextBlock Text="{Binding Instrument.PulseCSelect, FallbackValue='CorVol'}"
                                           HorizontalAlignment="Center" />

                            <TextBlock FontSize="12"
                                           Text="{Binding Instrument.PulseCScaling, FallbackValue='2'}"
                                           HorizontalAlignment="Center" />
                            <TextBlock FontSize="12" Text="Scaling" HorizontalAlignment="Center" />
                        </StackPanel>-->


                    </UniformGrid>

                </Grid>
            </Border>
            <!--<ContentControl
                Margin="2"
                cal:View.Context="EventLogCommPortCard"
                cal:View.Model="{Binding}"
                Visibility="{Binding DisplayEventLogCommPortView, Converter={StaticResource BoolToHiddenConverter}}" />-->
        </StackPanel>
    </Border>
</reactiveUi:ReactiveUserControl>

<reactiveUi:ReactiveUserControl
    x:Class="Prover.Modules.UnionGas.Login.LoginToolBarView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:loginToolbar="clr-namespace:Prover.Modules.UnionGas.Login"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:reactiveUi="http://reactiveui.net"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:TypeArguments="loginToolbar:LoginToolbarViewModel"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Button.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/materialdesigntheme.textblock.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid
        Margin="2"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch">

        <StackPanel
            x:Name="ExecutingContent"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Center"
            Visibility="Collapsed"
            ZIndex="1">
            <ProgressBar IsIndeterminate="True" />
            <TextBlock
                x:Name="WaitingForLoginMessage"
                HorizontalAlignment="left"
                VerticalAlignment="Center"
                Style="{StaticResource MaterialDesignBody1TextBlock}"
                Text="Signing in..."
                Visibility="Collapsed" />
        </StackPanel>

        <StackPanel
            x:Name="NotLoggedInContent"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <Button
                x:Name="LoginButton"
                Width="Auto"
                Height="Auto"
                Margin="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                materialDesign:RippleAssist.IsCentered="True"
                Content="{materialDesign:PackIcon UserOff,
                                                  Size=48}"
                Style="{DynamicResource MaterialDesignIconButton}" />
        </StackPanel>

        <StackPanel
            x:Name="LoggedInContent"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Orientation="Vertical"
            Visibility="Collapsed">

            <materialDesign:PopupBox
                Margin="2,15"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Bottom"
                StaysOpen="True" />
            <materialDesign:PopupBox
                Padding="2"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
                <materialDesign:PopupBox.ToggleContent>
                    <Button
                        materialDesign:ButtonAssist.CornerRadius="0"
                        IsHitTestVisible="False"
                        Style="{StaticResource MaterialDesignFlatButton}">
                        <materialDesign:PackIcon Kind="Account" />
                    </Button>
                </materialDesign:PopupBox.ToggleContent>
                <StackPanel>
                    <Button
                        x:Name="LogoutButton"
                        Width="90"
                        Height="28"
                        HorizontalAlignment="Right"
                        Style="{StaticResource MaterialDesignRaisedLightButton}" />


                </StackPanel>

            </materialDesign:PopupBox>


        </StackPanel>


    </Grid>
</reactiveUi:ReactiveUserControl>

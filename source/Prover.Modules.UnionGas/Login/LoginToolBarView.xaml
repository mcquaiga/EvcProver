<reactiveUi:ReactiveUserControl
    x:Class="Prover.Modules.UnionGas.Login.LoginToolBarView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:loginToolbar="clr-namespace:Prover.Modules.UnionGas.Login"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:reactiveUi="http://reactiveui.net"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:TypeArguments="loginToolbar:LoginToolbarViewModel"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!--<ResourceDictionary Source=""/>-->
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>

        <StackPanel x:Name="ExecutingContent" ZIndex="1">
            <TextBlock x:Name="WaitingForLoginMessage" Text="Logging into MASA..." />
        </StackPanel>

        <StackPanel x:Name="LoggedOutContent" VerticalAlignment="Center">
            <Button
                x:Name="LoginButton"
                Width="75"
                Margin="5"
                VerticalAlignment="Center"
                materialDesign:RippleAssist.IsCentered="True"
                Content="Login"
                Style="{StaticResource MaterialDesignRaisedLightButton}" />
        </StackPanel>

        <StackPanel
            x:Name="LoggedInContent"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Vertical">
            <StackPanel>
                <TextBlock Text="Welcome, " />
                <TextBlock x:Name="Username" />
            </StackPanel>
            <Button
                x:Name="LogoutButton"
                Content="Logout"
                Style="{StaticResource MaterialDesignRaisedLightButton}" />
        </StackPanel>


    </Grid>
</reactiveUi:ReactiveUserControl>

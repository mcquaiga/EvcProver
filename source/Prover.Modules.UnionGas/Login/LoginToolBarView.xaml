<reactiveUi:ReactiveUserControl
    x:Class="Prover.Modules.UnionGas.Login.LoginToolBarView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:loginToolbar="clr-namespace:Prover.Modules.UnionGas.Login"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:reactiveUi="http://reactiveui.net"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:TypeArguments="loginToolbar:LoginToolbarViewModel"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Button.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/materialdesigntheme.textblock.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid
        Margin="10,5"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch">

        <StackPanel
            x:Name="ExecutingContent"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Center"
            Visibility="Collapsed"
            ZIndex="1">
            <TextBlock
                x:Name="WaitingForLoginMessage"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Text="Signing in..." />
        </StackPanel>

        <StackPanel
            x:Name="NotLoggedInContent"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <Button
                x:Name="LoginButton"
                Width="75"
                Margin="5"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                materialDesign:RippleAssist.IsCentered="True"
                Content="Sign in"
                Style="{DynamicResource MaterialDesignRaisedAccentButton}" />
        </StackPanel>

        <StackPanel
            x:Name="LoggedInContent"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Vertical"
            Visibility="Collapsed">
            <StackPanel Margin="4,4,4,12" Orientation="Horizontal">
                <materialDesign:PackIcon
                    Width="32"
                    Height="32"
                    VerticalAlignment="Center"
                    Kind="Account" />
                <TextBlock
                    x:Name="WelcomeTextBlock"
                    VerticalAlignment="Center"
                    Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                    Text="Hi " />
            </StackPanel>
            <Button
                x:Name="LogoutButton"
                Content="Sign out"
                Style="{StaticResource MaterialDesignRaisedLightButton}" />
        </StackPanel>


    </Grid>
</reactiveUi:ReactiveUserControl>
